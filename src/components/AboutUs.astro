---
import type LocaleProps from "../interfaces/LocaleProps";
import { getTranslations } from "../utils/i18n";

const { locale } = Astro.props as LocaleProps;
const t = getTranslations(locale);
---

<h2 class="text-3xl font-bold text-center mb-8">
  {t("aboutUs.title")}
</h2>
<div class="flex flex-col md:flex-row gap-8 items-center">
  <div class="w-full md:w-1/3">
    <!-- Placeholder yellow box for image -->
    <div class="bg-yellow-300 w-full h-64 rounded-lg"></div>
  </div>
  <div class="w-full md:w-2/3">
    <p class="mb-4 text-lg">{t("aboutUs.description")}</p>
    <p class="text-lg font-semibold">{t("aboutUs.mission")}</p>
  </div>
</div>
